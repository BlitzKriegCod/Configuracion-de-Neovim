{
	"suggest.noselect": false,
	"eslint.enable": true,
	"diagnostic.checkCurrentLine": true

	"coc.preferences.formatOnSaveFiletypes": [
		"css",
		"markdown",
		"javascript",
		"json",
		"html",
		"typescript",
		"python",
		"rust",
		"java"
	],
	"coc.global.extensions": [
		"coc-prettier",
		"coc-pairs",
		"coc-html",
		"coc-git",
		"coc-eslint",
		"coc-emmet",
		"coc-cssmodules",
		"coc-stylelint",
		"coc-rls",
		"coc-python",
		"coc-json",
		"coc-java",
		"coc-htmldjango",
		"coc-css",
		"coc-clangd",
		"coc-angular"
	],
	"prettier.printWidth": 100,
	"prettier.tabWidth": 4,
	"prettier.useTabs": true,
	"eslint.autoFixOnSave": true,
	"eslint.run": "onSave",
	"eslint.filetypes": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
	"stylelint.enable": true,
	"stylelint.autoFixOnSave": true,
	"python.formatting.provid-er": "black",
	"python.linting.enabled": true,
	"python.linting.pylintEnabled": true,
	"python.linting.flake8Enabled": true,
	"python.autoComplete.addBrackets": true,
	"java.jdt.ls.vmargs": "-noverify -Xmx2G -XX:+UseG1GC -XX:+UseStringDeduplication",
	"java.format.settings.url": "https://raw.githubusercontent.com/google/styleguide/gh-pages/eclipse-java-google-style.xml",
	"java.format.settings.profile": "GoogleStyle",
	"css.filetypes": ["css", "scss", "less", "postcss"],
	"css.lint.unknownAtRules": "ignore",
	"clangd.arguments": ["--background-index", "--header-insertion=iwyu"],
	"angular.trace.server": "verbose",
	"angular.experimental-ivy": true
}
